{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "vue-schema-org": ["./packages/schema-org/index.ts"],
      "vue-schema-org/*": ["./packages/schema-org/*"],
      "vue-schema-org-integrations/vitepress": ["./packages/integrations/src/vitepress.ts"],
      "vue-schema-org-integrations/vite": ["./packages/integrations/src/vite.ts"],
      "vue-schema-org-integrations/vitesse": ["./packages/integrations/src/vitesse.ts"],
      "vue-schema-org/vite": ["./packages/integrations/src/vite.ts"],
      "vue-schema-org/vitesse": ["./packages/integrations/src/vitesse.ts"],
      "vue-schema-org/components": ["./packages/schema-org/components/index.ts"]
    },
    "types": [
      "vitest",
      "vitest/globals"
    ]
  },
  "include": [
    "packages/**/*.d.ts",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "**/**/*.stories.tsx",
    "**/**/*.md",
    "**/dist",
    "packages/.test",
    "packages/_docs"
  ]
}
